<div class="container">
<h1 class ="text-center mb-3 mt-4">Calculate Optime</h1>
<p class ="text-center mb-3 mt-4">可処分時間を計算しよう</p>
  <div class ="image_new d-flex justify-content-between col-md-3　col-xs-6">
      <%= image_tag 'food.svg',name: '飯',class: 'not_show'%>
      <%= image_tag 'commute.svg',name: '通勤',class: 'not_show'%>
      <%= image_tag 'sleep.svg',name: '睡眠'%>
      <%= image_tag 'work.svg',name: '勤務'%>
      <%= image_tag 'hygiene.svg',name: '衛生'%>
</div>
<p class = "text-center">お名前を入力してください。</p>
<%= link_to 'Patient Record', optimes_path(@optime) %>
<%= form_with model: @user, html: { class: 'text-center mt-3' },  local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
     <div class="form-group ms-4">
       <%= f.label :guest_name %>
       <%= f.text_field :guest_name, class: 'form-control text-center', id: 'user_last_name'%>
     </div>
     <div class="actions">
       <%= f.submit '登録', class: 'btn btn-primary' %>
     </div>
     <%end%>

</div>